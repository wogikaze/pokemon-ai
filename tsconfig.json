{
    "compilerOptions": {
        "sourceMap": true,
        "target": "ES5",
        "module": "ES2015",
        "baseUrl": "./src",
        "outDir": "dist",
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "incremental": true,
        "allowUnreachableCode": false,
        "esModuleInterop": true,
        "useDefineForClassFields": false
    },
    "types": [
        "node"
    ],
    "exclude": [
        "./.*-dist/**/*",
        "./server/chat-plugins/private/*/*.d.ts"
    ],
    "include": [
        "src"
    ]
}